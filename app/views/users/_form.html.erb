<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <%= f.fields_for :addresses do |builder| %>
    <%= render 'address_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Address", f, :addresses %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

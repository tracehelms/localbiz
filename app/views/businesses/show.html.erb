<section>
  <header class="text-center">
    <h1><%= @business.name %></h1>
    <p><strong>Category: </strong><%= @business.category %></p>
    <p><%= link_to 'Edit', edit_business_path(@business) if policy(@business).edit?%></p>
  </header>

  <div class="row">
    <div class="col-md-4 column">
      <%= image_tag 'http://placekitten.com/250/250' %>
    </div>
    <div class="col-md-8 column">
      <p><%= @business.about %></p>
      <% if @business.addresses.any? %>
        <section>
          <%= render partial: 'address', collection: @business.addresses %>
        </section>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h2>Reviews</h2>
      <div class="row">
      <% @business.reviews.each do |review| %>
        <p class="col-md-3">
          <strong><%= review.rating %> Stars</strong>
          <%= review.content %>
        </p>
      <% end %>
    </div>
    <%= link_to 'Add Review', business_new_review_path(business_id: @business.id) %>
  </div>

</section>

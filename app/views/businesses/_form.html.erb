<%= simple_form_for(@business) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category %>
  </div>

  <%= f.fields_for :addresses do |builder| %>
    <%= render 'addresses/form', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Address", f, :addresses %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

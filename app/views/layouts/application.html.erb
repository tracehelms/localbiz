<!DOCTYPE html>
<html>
  <head>
  	<meta charset="utf-8" />

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : t('title') %></title>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyBOjFeHdLRWpOmTNztgXhLFABqYGBzCJBE&sensor=true" %>

    <%= csrf_meta_tags %>
  </head>

  <body>

    <%= render 'layouts/header' %>

    <div class="container">
      <div class="row">
        <% flash.each do |key, value| %>
          <% type = 'success' if key == :notice %>
          <% type = 'warning' if key == :alert %>
          <% type = 'danger' if key == :error %>

          <div class="col-md-12 alert alert-<%= type || key %>">
            <%= value %>
            <a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
          </div>

        <% end %>
      </div>

      <%= yield %>
    </div>

    <%= javascript_include_tag "application" %>
  </body>
</html>
